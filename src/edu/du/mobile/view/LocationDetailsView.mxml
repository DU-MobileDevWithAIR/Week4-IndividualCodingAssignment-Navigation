<s:View xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark">
    <fx:Script><![CDATA[
        import edu.du.mobile.control.events.NavigationEvent;
        import edu.du.mobile.model.constants.ApplicationScreens;


        private function _onPrevBtnClick(event:Event) {
            if (edu.du.mobile.view.LoginOrRegisterView.backScreen == "login")
            {
                dispatchEvent( new NavigationEvent( NavigationEvent.GOTO_SCREEN, ApplicationScreens.LOGIN ) );

            }
            else if (edu.du.mobile.view.LoginOrRegisterView.backScreen == "register")
            {
                dispatchEvent( new NavigationEvent( NavigationEvent.GOTO_SCREEN, ApplicationScreens.REGISTER ) );
            }
                    }
        ]]></fx:Script>
    <s:Scroller top="20" left="20" right="20"
        height="100%">

        <s:VGroup >

            <s:HGroup>
                <s:Label text="Map"
                   color="blue"
                   paddingLeft="25"/>
                <s:Label text="Location"
                   paddingLeft="100"/>
                <s:Label text="Share"
                   color="blue"
                   paddingLeft="70"/>
            </s:HGroup>

            <s:Image id="locationImage"
               height="300"
               width="100%"
               backgroundColor="#000000"/>



            <s:Label text="Phone"
               color="blue"/>
            <s:Label text="303-333-3333"/>

            <s:Label text="Website"
               color="blue"/>
            <s:Label text="http://www.locationplace.com"/>

            <s:Label text="Address"
               color="blue"/>
            <s:Label text="501 E Hello World Ave"/>
            <s:Label text="Denver, CO 80203"/>

            <s:HGroup width="100%">
                <s:Label text="Directions to Here"
                    color="blue"/>
                <s:Spacer width="100%"/>
                <s:Label text="Directions from Here"
                    color="blue"/>
            </s:HGroup>

            <s:Button id="prev_btn"
                      label="Previous"
                      click="_onPrevBtnClick( event )"/>

        </s:VGroup>

    </s:Scroller>
</s:View>